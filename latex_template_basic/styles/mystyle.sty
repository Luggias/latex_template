% --- ENUMERATE / ITEMIZE STYLE ---
\RequirePackage{enumitem}    % Customize llist formatting (e.g.y itemize, enumerate)
\setlist[itemize]{topsep=3.5pt, partopsep=3.5pt, noitemsep}   % Reduces vertical spacing around itemize lists:
                                                              % - topsep: space before and after the entire list
                                                              % - partopsep: additional space when the list starts a new paragraph
                                                              % - noitemsep: removes space between individual list items
\setlist[enumerate]{topsep=3.5pt, partopsep=3.5pt, noitemsep} % Same as above, but for enumerate lists (numbered)
% --- HEADER/FOOTER ---
\RequirePackage{fancyhdr} % Customize headers and footers
% --- HYPERLINKS & PDF METADATA ---
\RequirePackage{hyperref}    % Enable clickable hyperlinks and TOC links
\hypersetup{                 % Global configuration for hyperref
  colorlinks=true,           % Color link text instead of drawing boxes around links
  linkcolor=black,           % Color for internal links (TOC, cross-references)
  citecolor=black,           % Color for citation links
  filecolor=black,           % Color for local file links
  urlcolor=black,            % Color for external URLs and email addresses
  pdfauthor={Lukas Maximilian Kapferer}, % PDF metadata: author
  pdftitle={LaTeX Template}, % PDF metadata: title
  pdfsubject={},             % PDF metadata: subject
  pdfkeywords={},            % PDF metadata: keywords (comma-separated)
  pdfcreator={LaTeX (latexmk, VS Code, mystyle.sty v1.1)},  % PDF metadata: creator/producer
  bookmarksnumbered=true,    % Include section numbers in PDF bookmarks
  bookmarksopen=true,        % Open the bookmark tree by default
  pdfstartview=FitH,         % Start with the page width fitted to the window
  breaklinks=true,           % Allow line breaks in long links
}
\RequirePackage{bookmark}    % Faster, cleaner PDF bookmarks than hyperref’s default; avoids duplicates and lets you control levels/order
% --- CODE ENVIRONMENTS ---
\RequirePackage{minted}      % Pygments-based code highlighting (requires `-shell-escape` and a working `pygmentize`)
\usemintedstyle{gruvbox-light}      % Set the global Pygments color scheme for all minted listings
% --- BOXES & CUSTOM ENVIRONMENTS ---
\RequirePackage[most]{tcolorbox}    % Colored and framed boxes
% --- TITLE & TITLEPAGE ---
\RequirePackage{csquotes}    % Provides context-aware quotation commands like \enquote{}, supporting language-specific quotation styles
\RequirePackage{titling}     % Customize the title page and title formatting
% --- PATCHING COMMANDS ---
\RequirePackage{listings}    % Enables source code display with syntax highlighting
\setlength{\parindent}{0pt}  % Disables paragraph indentation
% --- SCIENTIFIC UNITS (siunitx) ---
\RequirePackage{siunitx}      % Consistent typesetting of units and numbers
\sisetup{
    locale=DE,                  % German formatting
    detect-all,                 % Detect surrounding font style
    per-mode = fraction,        % m * s^{-1} -> m/s
    group-separator = {\,},     % Thin space as thousand separator
    group-minimum-digits = 4,   % Start grouping at 4 digits
    per-mode=symbol,            % Use '/' for units
    output-decimal-marker = {.} % Always use '.' for decimals
}
