{
	"Itemize environment": {
		"prefix": "itemize",
		"body": [
		"\\begin{itemize}",
		"  \\item $1",
		"\\end{itemize}"
		],
		"description": "Bullet Point List"
	},
	"Enumerate environment": {
		"prefix": "enumerate",
		"body": [
		"\\begin{enumerate}",
		"  \\item $1",
		"\\end{enumerate}"
		],
		"description": "Numbered List"
	},
	"Java code block": {
		"prefix": "java",
		"body": [
		"\\begin{java}",
		"$1",
		"\\end{java}"
		],
		"description": "Java code block using listings package"
	},
	"Python code block": {
		"prefix": "python",
		"body": [
			"\\begin{python}",
			"$1",
			"\\end{python}"
		],
		"description": "Python code block using listings package"
	},
	"Professional table environment": {
		"prefix": "table",
		"body": [
			"\\begin{table}[ht]",
			"  \\centering",
			"  \\begin{tabular} {p{0.2\textwidth} p{0.6\textwidth} p{0.2\textwidth}}",
			"    \\toprule",
			"    Header1 & Header2 & Header3 \\\\\\\\",
			"    \\midrule",
			"    Row1Col1 & Row1Col2 & Row1Col3 \\\\\\\\",
			"    \\bottomrule",
			"  \\end{tabular}",
			"  % caption{$1}",
			"  % label{tab:$2}",
			"\\end{table}"
		],
		"description": "Table with 3 columns, caption and label"
	},
	"Figure environment": {
		"prefix": "image",
		"body": [
			"\\begin{figure}[H]",
			"  \\centering",
			"  \\includegraphics[width=0.6\\linewidth]{fig/${1:image.png}}",
			"  % caption{${2:Bildbeschreibung}}",
			"  % label{fig:${3:label}}",
			"\\end{figure}"
		],
		"description": "Inserts an image with caption and label"
	},
	"Inline Code mit \\code": {
		"prefix": "ccode",
		"body": [
			"\\code|$1|"
		],
		"description": "Inserts \\code|...| for Inline-Code"
	},
	"Insert horizontal rule with spacing": {
		"prefix": "lline",
		"body": [
			"\\vspace{0.4cm}",
			"\\hrule",
			"\\vspace{0.4cm}"
		],
		"description": "Insert a horizontal rule with vertical spacing"
	},
	"Monospaced text (\\texttt{})": {
		"prefix": "ttext",
		"body": [
			"\\texttt{$1}"
		],
		"description": "Insert \\texttt{} for monospaced text with cursor inside"
	},
	"Tcolorbox environment": {
        "prefix": "bbox",
        "body": [
        "\\begin{tcolorbox}[",
        "  colback=${1|blue!20,red!20,white!10,yellow!20,green!20|},",   
        "  colframe=${2|blue!60,black,red!80!black,yellow!60!black,green!40!black|},",
        "  title={${3:Title}},",
        "  % caption={${4:Caption text}},",
        "  % label={${5:box:label}}",
        "]",
        "  $0",
        "\\end{tcolorbox}"
        ],
        "description": "Insert a tcolorbox with colour pickers, title, caption and label"
    },
	"Create vertical line spacing 0.2cm": {
		"prefix": "vspace-0.2",
		"body": [
		"\\vspace{${1:0.2}cm}$0"
		],
		"description": "Insert vertical space with a default of 0.2cm"
	},
	"Create vertical line spacing 0.5cm": {
		"prefix": "vspace-0.5",
		"body": [
		"\\vspace{${1:0.5}cm}$0"
		],
		"description": "Insert vertical space with a default of 0.5cm"
	},
	"Create vertical line spacing 1cm": {
		"prefix": "vspace-1",
		"body": [
		"\\vspace{${1:1}cm}$0"
		],
		"description": "Insert vertical space with a default of 1cm"
	},
	"Create vertical line spacing 1.5cm": {
		"prefix": "vspace-1.5",
		"body": [
		"\\vspace{${1:1.5}cm}$0"
		],
		"description": "Insert vertical space with a default of 1.5cm"
	},
	"Create vertical line spacing 2cm": {
		"prefix": "vspace-2",
		"body": [
		"\\vspace{${1:2}cm}$0"
		],
		"description": "Insert vertical space with a default of 2cm"
	}
}