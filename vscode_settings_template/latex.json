{
	"Itemize environment": {
		"prefix": "itemize",
		"body": [
		"\\begin{itemize}",
		"  \\item $1",
		"\\end{itemize}\n\n$0"
		],
		"description": "Bullet Point List"
	},
	"Enumerate environment": {
		"prefix": "enumerate",
		"body": [
		"\\begin{enumerate}",
		"  \\item $1",
		"\\end{enumerate}\n\n$0"
		],
		"description": "Numbered List"
	},
	"Java code block": {
		"prefix": "java",
		"body": [
		"\\begin{java}",
		"\t$1",
		"\\end{java}\n\n$0"
		],
		"description": "Java code block using listings package"
	},
	"Python code block": {
		"prefix": "python",
		"body": [
			"\\begin{python}",
			"\t$1",
			"\\end{python}\n\n$0"
		],
		"description": "Python code block using listings package"
	},
	"Professional table environment": {
		"prefix": "table",
		"body": [
			"\\begin{table}[H]",
			"  \\centering",
			"  \\begin{tabular} {p{0.18\\textwidth} p{0.56\\textwidth} p{0.18\\textwidth}} % sum = 0.92 for three columns to be aligned",
			"    \\toprule",
			"    \\textbf{${1:Header1}} & \\textbf{${2:Header2}} & \\textbf{${3:Header3}} \\\\\\\\",
			"    \\midrule",
			"    ${4:Row1-Col1} & ${5:Row1-Col2} & ${6:Row1-Col3} \\\\\\\\",
			"    ${7:Row2-Col1} & ${8:Row2-Col2} & ${9:Row2-Col3} \\\\\\\\",
			"    ${10:Row3-Col1} & ${11:Row3-Col2} & ${12:Row3-Col3} \\\\\\\\",
			"    \\bottomrule",
			"  \\end{tabular}",
			"  % caption{$13}",
			"  % label{tab:$14}",
			"\\end{table}\n\n$0"
		],
		"description": "Table with 3 columns, caption and label"
	},
	"Figure environment": {
		"prefix": "image",
		"body": [
			"\\begin{figure}[H]",
			"  \\centering",
			"  \\includegraphics[width=${1:}\\linewidth]{fig/${2:image.png}}",
			"  % caption{${3:}}",
			"  % label{fig:${4:}}",
			"\\end{figure}\n\n$0"
		],
		"description": "Inserts an image with caption and label"
	},
	"Inline Code mit \\code": {
		"prefix": "ccode",
		"body": [
			"\\code|$1|"
		],
		"description": "Inserts \\code|...| for Inline-Code"
	},
		"Monospaced text (\\texttt{})": {
		"prefix": "ttext",
		"body": [
			"\\texttt{$1}"
		],
		"description": "Insert \\texttt{} for monospaced text with cursor inside"
	},
	"Insert horizontal rule with spacing": {
		"prefix": "lline",
		"body": [
			"\\vspace{${1:0.4cm}}",
			"\\hrule",
			"\\vspace{${2:0.4cm}}",
			"\n$0"
		],
		"description": "Insert a horizontal rule with vertical spacing"
	},
	"Tcolorbox environment": {
        "prefix": "bbox",
        "body": [
        "\\begin{tcolorbox}[",
        "  colback=${1|blue!20,red!20,white!10,yellow!20,green!20|},",   
        "  colframe=${2|blue!60,black,red!80!black,yellow!60!black,green!40!black|},",
        "  title={${3:Title}},",
        "  % caption={${4:Caption text}},",
        "  % label={${5:box:label}}",
        "]",
        "\t$6",
        "\\end{tcolorbox}\n\n$0"
        ],
        "description": "Insert a tcolorbox with colour pickers, title, caption and label"
    },
	"Create vertical line spacing 0.2cm": {
		"prefix": "vspace-0.2",
		"body": [
		"\\vspace{${1:0.2}cm}\n$0"
		],
		"description": "Insert vertical space with a default of 0.2cm"
	},
	"Create vertical line spacing 0.5cm": {
		"prefix": "vspace-0.5",
		"body": [
		"\\vspace{${1:0.5}cm}\n$0"
		],
		"description": "Insert vertical space with a default of 0.5cm"
	},
	"Create vertical line spacing 1cm": {
		"prefix": "vspace-1",
		"body": [
		"\\vspace{${1:1}cm}\n$0"
		],
		"description": "Insert vertical space with a default of 1cm"
	},
	"Create vertical line spacing 1.5cm": {
		"prefix": "vspace-1.5",
		"body": [
		"\\vspace{${1:1.5}cm}\n$0"
		],
		"description": "Insert vertical space with a default of 1.5cm"
	},
	"Create vertical line spacing 2cm": {
		"prefix": "vspace-2",
		"body": [
		"\\vspace{${1:2}cm}\n$0"
		],
		"description": "Insert vertical space with a default of 2cm"
	},
	"Create Minipage": {
    "prefix": "minipage",
    "body": [
        "\\begin{minipage}{${1:0.49}\\textwidth}",
        "\t$2",
        "\\end{minipage}\n\n$0"
    ],
    "description": "Inserts a minipage environment with adjustable width"
	},
	"Side-by-Side Minipages": {
    "prefix": "miniside",
    "body": [
        "\\begin{minipage}{${1:0.49}\\textwidth}",
        "\t$2",
        "\\end{minipage}",
        "\\hfill",
        "\\begin{minipage}{${3:0.49}\\textwidth}",
        "\t$4",
        "\\end{minipage}",
        "\n$0"
    ],
    "description": "Two minipages side-by-side with horizontal fill"
	},
	"Coloured Text": {
    "prefix": "ccolour",
    "body": [
        "\\textcolor{${1:red}}{${2:text}} $0"
    ],
    "description": "Insert text with a specific colour"
	}
}